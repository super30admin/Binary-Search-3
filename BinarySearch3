/**
* Time complexity : log(n) as we are performing n/2 operations each time 
*/
class Solution {
    public double myPow(double x, int n) {
        if(n==0){
            return 1;
        }
        
        double value=myPow(x,n/2);
        
        if(n%2==0){
            return value*value;
        }else{
            if(n<0){
                return value*value*1/x;
            }else{
                return value*value*x;
            }
        }
        
    }
        
}
